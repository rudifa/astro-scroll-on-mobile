<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Responsive Table Demo</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family:
          system-ui,
          -apple-system,
          sans-serif;
        line-height: 1.5;
      }

      header {
        background: #2563eb;
        color: white;
        padding: 1rem;
        text-align: center;
      }

      footer {
        background: #1e3a8a;
        color: white;
        padding: 1rem;
        text-align: center;
      }

      main {
        padding: 1rem;
        /* Enable smooth scrolling for the table container */
        -webkit-overflow-scrolling: touch;
      }

      .table-container {
        width: 100%;
        overflow-x: auto;
        /* Add some visual indication of scrollability */
        background:
          linear-gradient(to right, white 30%, rgba(255, 255, 255, 0)),
          linear-gradient(to right, rgba(255, 255, 255, 0), white 70%) 100% 0,
          radial-gradient(
            farthest-side at 0% 50%,
            rgba(0, 0, 0, 0.2),
            rgba(0, 0, 0, 0)
          ),
          radial-gradient(
              farthest-side at 100% 50%,
              rgba(0, 0, 0, 0.2),
              rgba(0, 0, 0, 0)
            )
            100% 0;
        background-repeat: no-repeat;
        background-size:
          40px 100%,
          40px 100%,
          14px 100%,
          14px 100%;
        background-position:
          0 0,
          100% 0,
          0 0,
          100% 0;
        background-attachment: local, local, scroll, scroll;
      }

      table {
        width: 1000px;
        border-collapse: collapse;
        background: white;
      }

      th,
      td {
        padding: 0.75rem;
        border: 1px solid #e5e7eb;
        text-align: left;
      }

      th {
        background: #f3f4f6;
        font-weight: 600;
      }

      tr:nth-child(even) {
        background: #f9fafb;
      }

      /* Make sure the content is readable on mobile */
      @media (max-width: 640px) {
        body {
          font-size: 14px;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Responsive Table Demo</h1>
    </header>

    <main>
      <div class='table-container'>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Product Name</th>
              <th>Category</th>
              <th>Description</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Last Updated</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            {
              Array.from({length: 10}).map((_, i) => (
                <tr>
                  <td>#{i + 1}</td>
                  <td>Product {i + 1}</td>
                  <td>Category {Math.floor(Math.random() * 5) + 1}</td>
                  <td>
                    This is a detailed description for Product {i + 1} with
                    extended text to demonstrate horizontal scrolling
                  </td>
                  <td>${(Math.random() * 100).toFixed(2)}</td>
                  <td>{Math.floor(Math.random() * 100)}</td>
                  <td>{new Date().toLocaleDateString()}</td>
                  <td>{Math.random() > 0.5 ? "Active" : "Inactive"}</td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </main>

    <footer>
      <p>Â© 2024 Responsive Table Demo</p>
    </footer>
  </body>
</html>
